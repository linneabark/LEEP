<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.linneabark.test.TimeLog"
    android:background="@color/plainWhite">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/LinearLayout1"
        android:gravity="center">

        <!-- TODO: Update blank fragment layout -->

        <Button
            android:id="@+id/startClock_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/startClock"
            android:background="@color/colorPrimary"
            android:textColor="@color/plainBlack"
            />

        <TextView
            android:id="@+id/clock_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/emptyClock"
            android:textSize="40sp"
            android:textColor="@color/plainBlack"/>

        <Button
            android:id="@+id/stopClock_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/stopClock"
            android:background="@color/colorPrimary"
            android:textColor="@color/plainBlack"/>
    </LinearLayout>


</FrameLayout>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.linneabark.test.TimeLog"
    android:background="@color/plainWhite">


    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <!-- TODO: Update blank fragment layout -->

        <TextView
            android:id="@+id/clock_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/emptyClock"
            android:textColor="@color/plainBlack"
            android:textSize="60sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <Button
            android:id="@+id/startClock_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/transparent"
            android:text="@string/startClock"
            android:textSize="20dp"
            android:textStyle="italic"
            android:textColor="@color/plainBlack" />

        <Button
            android:id="@+id/stopClock_btn"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/transparent"
            android:text="@string/stopClock"
            android:textColor="@color/plainBlack"
            android:textSize="20dp"
            android:textStyle="italic"/>
        </LinearLayout>



        <TextView
            android:id="@+id/quoteDisplay"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="No quote is defined yet!"
            android:textColor="@color/plainBlack"/>

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:background="@color/colorPrimary" />

        <TextView
            android:id="@+id/testText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="An activity?" />

    </LinearLayout>


</FrameLayout>
